 <div class="card pt-2 border-0 h-100">
    <div class="card-header mb-2 bg-transparent border-0 brc-primary-l1 pl-1">
        <h5 class="card-title text-primary-d2">
            Activity Feed
        </h5>
    </div>

    <div class="card-body p-0 d-flex flex-column">
        <div class="flex-grow-1">
            {{#each (get "activity")}}
            <div class="mb-4 text-grey-m1 text-95">
                <div class="d-flex align-items-start">
                    <div class="w-5 h-5 text-center pt-2 radius-round mr-2px bgc-{{color}}-tp1 text-white">
                        <i class="{{icon}}"></i>
                    </div>

                    <div class="mx-2">
                        <div class="font-bolder text-{{textColor}}">
                            {{name}}
                        </div>
                        {{summary}}
                    </div>

                    <span class="text-90 text-dark-l3 ml-auto text-nowrap">
                        {{time}}
                    </span>
                </div>
            </div>    
            {{/each}}
        </div>

        <div class="my-25 mx-4 text-center">
            <button type="button" class="btn w-50 btn-sm btn-bold btn-lighter-success border-1">
                All Activities
            </button>
        </div>
    </div>
</div>