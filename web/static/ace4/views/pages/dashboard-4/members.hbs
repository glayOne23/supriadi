<div class="card pt-2 border-0 h-100">
    <div class="card-header bg-transparent border-0 brc-primary-l1 pl-1">
        <h5 class="card-title text-primary-d2">
            Latest Members
        </h5>
    </div>

    <div class="card-body p-0 d-flex flex-column">
        <div class="flex-grow-1">
            <table class="table table-striped-primary table-borderless border-0">
                <tbody>
                    <tr></tr><!-- empty row, so that table-stripes start from second row -->

                    {{#each (get "members")}}
                    <tr>
                        <td class="text-grey-d2 pl-2 pl-lg-3">
                            {{#if color}}
                                <span class="mr-2 d-inline-block w-5 h-5 text-center pt-2 radius-round bgc-primary-l2 text-primary-d2 font-bolder text-90">
                                    <span>{{color}}</span>
                                </span>
                            {{/if}}

                            {{#if avatar}}
                             <img alt="{{name}}'s avatar" src="assets/image/avatar/{{avatar}}" class="radius-round border-1 p-1px brc-primary-m2 mr-2 w-5 h-5" />
                            {{/if}}
                            {{name}}
                        </td>

                        <td class="text-secondary-m1 text-85 font-bolder">
                            {{role}}
                        </td>
                        
                        <td class="text-grey-m1 text-85">
                            {{location}}
                        </td>                
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>

        <div class="my-25 mx-4 text-center">
            <button type="button" class="btn w-50 btn-sm btn-bold btn-lighter-blue border-1">
                All Members
            </button>
        </div>
    </div>
</div>